@model PresentationLayerWebMvc.Models.QuizResultViewModel

@{
    ViewBag.Title = "Result";
}

<h2>Result</h2>

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h3>@Model.Title</h3>
            <ol class="list-group">
                @foreach (var question in Model.Questions)
                {
                    <li class="list-group-item">
                        <h4>@question.Text</h4>

                        <ul class="list-group">
                            @foreach (var answer in question.Answers)
                            {
                                if (@answer == @question.Correct && @answer == @question.Selected)
                                {
                                    <li class="list-group-item list-group-item-success">
                                        <span><strong>@answer</strong></span>
                                    </li>
                                }
                                else if (@answer == @question.Correct && @answer != @question.Selected)
                                {
                                    <li class="list-group-item list-group-item-danger">
                                        <span><strong>@answer</strong></span>
                                    </li>
                                }
                                else
                                {
                                    <li class="list-group-item">
                                        <span><strong>@answer</strong></span>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                }
            </ol>
        </div>
    </div>
</div>